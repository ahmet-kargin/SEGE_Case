@model SEGE_Case.WebUI.Models.BattleViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Battle Result</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        h2 {
            color: #343a40;
        }

        h3 {
            color: #495057;
        }

        .text-center {
            text-align: center;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        .table th, .table td {
            text-align: center;
        }

        .table th {
            background-color: #e9ecef;
        }

        .btn-secondary {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Battle Result</h2>
        <div class="d-flex mb-3">
            <h3>Hero: @Model.HeroId</h3>
            <h3>Enemy: @Model.EnemyId</h3>
        </div>

        <div class="mb-4">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Round</th>
                            <th>Hero Damage</th>
                            <th>Enemy Damage</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var round in Model.BattleResult!.RoundResults)
                        {
                            <tr>
                                <td>@round.RoundNumber</td>
                                <td>@round.HeroDamage</td>
                                <td>@round.EnemyDamage</td>
                                <td>@round.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mb-4">
            <h4>Summary:</h4>
            <p><strong>Final Outcome:</strong> @Model.BattleResult.FinalOutcome</p>
            <p><strong>Total Rounds:</strong> @Model.BattleResult.RoundResults.Count()</p>
            <p><strong>Total Damage by Hero:</strong> @Model.BattleResult.RoundResults.Sum(r => r.HeroDamage)</p>
            <p><strong>Total Damage by Enemy:</strong> @Model.BattleResult.RoundResults.Sum(r => r.EnemyDamage)</p>
        </div>

        <a href="@Url.Action("SimulateBattle", "Home")" class="btn btn-secondary btn-block btn-sm">Back to Simulation</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
