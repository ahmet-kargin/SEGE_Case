@model SEGE_Case.Services.Services.BattleResult

<h2>Battle Result</h2>

<table>
    <thead>
        <tr>
            <th>Round</th>
            <th>Hero Damage</th>
            <th>Enemy Damage</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var round in Model.RoundResults)
        {
            <tr>
                <td>@round.RoundNumber</td>
                <td>@round.HeroDamage</td>
                <td>@round.EnemyDamage</td>
                <td>@round.Status</td>
            </tr>
        }
    </tbody>
</table>
