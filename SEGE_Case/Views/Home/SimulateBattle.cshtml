@{
    ViewData["Title"] = "Battle Simulation";
}

<h2>@ViewData["Title"]</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Simulate Battle</title>
    <style>
        fieldset {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <form asp-action="SimulateBattle" method="post">
        <fieldset>
            <legend>Hero Attributes</legend>
            <div class="form-group row">
                <label for="heroAlchemy" class="col-sm-2 col-form-label">Alchemy</label>
                <div class="col-sm-10">
                    <input type="number" id="heroAlchemy" name="hero.Alchemy" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroArchery" class="col-sm-2 col-form-label">Archery</label>
                <div class="col-sm-10">
                    <input type="number" id="heroArchery" name="hero.Archery" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroDexterity" class="col-sm-2 col-form-label">Dexterity</label>
                <div class="col-sm-10">
                    <input type="number" id="heroDexterity" name="hero.Dexterity" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroEndurance" class="col-sm-2 col-form-label">Endurance</label>
                <div class="col-sm-10">
                    <input type="number" id="heroEndurance" name="hero.Endurance" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroIntelligence" class="col-sm-2 col-form-label">Intelligence</label>
                <div class="col-sm-10">
                    <input type="number" id="heroIntelligence" name="hero.Intelligence" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroLuck" class="col-sm-2 col-form-label">Luck (1-10)</label>
                <div class="col-sm-10">
                    <input type="number" id="heroLuck" name="hero.Luck" class="form-control" min="1" max="10" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroPerception" class="col-sm-2 col-form-label">Perception</label>
                <div class="col-sm-10">
                    <input type="number" id="heroPerception" name="hero.Perception" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroResilience" class="col-sm-2 col-form-label">Resilience</label>
                <div class="col-sm-10">
                    <input type="number" id="heroResilience" name="hero.Resilience" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroStealth" class="col-sm-2 col-form-label">Stealth</label>
                <div class="col-sm-10">
                    <input type="number" id="heroStealth" name="hero.Stealth" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroStrength" class="col-sm-2 col-form-label">Strength</label>
                <div class="col-sm-10">
                    <input type="number" id="heroStrength" name="hero.Strength" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="heroWisdom" class="col-sm-2 col-form-label">Wisdom</label>
                <div class="col-sm-10">
                    <input type="number" id="heroWisdom" name="hero.Wisdom" class="form-control" min="0" max="100" required />
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>Enemy Attributes</legend>
            <div class="form-group row">
                <label for="enemyAlchemy" class="col-sm-2 col-form-label">Alchemy</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyAlchemy" name="enemy.Alchemy" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyArchery" class="col-sm-2 col-form-label">Archery</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyArchery" name="enemy.Archery" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyDexterity" class="col-sm-2 col-form-label">Dexterity</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyDexterity" name="enemy.Dexterity" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyEndurance" class="col-sm-2 col-form-label">Endurance</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyEndurance" name="enemy.Endurance" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyIntelligence" class="col-sm-2 col-form-label">Intelligence</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyIntelligence" name="enemy.Intelligence" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyLuck" class="col-sm-2 col-form-label">Luck (1-10)</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyLuck" name="enemy.Luck" class="form-control" min="1" max="10" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyPerception" class="col-sm-2 col-form-label">Perception</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyPerception" name="enemy.Perception" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyResilience" class="col-sm-2 col-form-label">Resilience</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyResilience" name="enemy.Resilience" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyStealth" class="col-sm-2 col-form-label">Stealth</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyStealth" name="enemy.Stealth" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyStrength" class="col-sm-2 col-form-label">Strength</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyStrength" name="enemy.Strength" class="form-control" min="0" max="100" required />
                </div>
            </div>
            <div class="form-group row">
                <label for="enemyWisdom" class="col-sm-2 col-form-label">Wisdom</label>
                <div class="col-sm-10">
                    <input type="number" id="enemyWisdom" name="enemy.Wisdom" class="form-control" min="0" max="100" required />
                </div>
            </div>
        </fieldset>

        <div class="form-group row">
            <label for="numberOfRounds" class="col-sm-2 col-form-label">Number of Rounds</label>
            <div class="col-sm-10">
                <input type="number" id="numberOfRounds" name="numberOfRounds" class="form-control" min="1" max="100" required />
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Simulate Battle</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
