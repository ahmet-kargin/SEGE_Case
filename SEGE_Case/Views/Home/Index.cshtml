@model SEGE_Case.WebUI.Models.BattleViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Battle Simulation</title>
</head>
<body>
    <div class="container mt-5">
        <h2>Battle Simulation</h2>
        <form asp-controller="Home" asp-action="SimulateBattle" method="post">
            <div class="form-group">
                <label for="HeroId">Select Hero:</label>
                <select id="HeroId" name="HeroId" class="form-control" required>
                    <option value="">Select Hero</option>
                    @foreach (var hero in Model.Heroes)
                    {
                        <option value="@hero.HeroId">@hero.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="EnemyId">Select Enemy:</label>
                <select id="EnemyId" name="EnemyId" class="form-control" required>
                    <option value="">Select Enemy</option>
                    @foreach (var enemy in Model.Enemies)
                    {
                        <option value="@enemy.Name">@enemy.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Level">Level:</label>
                <input type="number" id="Level" name="Level" class="form-control" min="1" max="100" value="@Model.Level" required />
            </div>
            <div class="form-group">
                <label for="Rarity">Rarity:</label>
                <input type="number" id="Rarity" name="Rarity" class="form-control" min="1" max="10" value="@Model.Rarity" required />
            </div>
            <div class="form-group">
                <label for="StarCount">Star Count:</label>
                <input type="number" id="StarCount" name="StarCount" class="form-control" min="0" max="10" value="@Model.StarCount" required />
            </div>
            <div class="form-group">
                <label for="PinkStarCount">Pink Star Count:</label>
                <input type="number" id="PinkStarCount" name="PinkStarCount" class="form-control" min="0" max="10" value="@Model.PinkStarCount" required />
            </div>
            <div class="form-group">
                <label for="NumberOfRounds">Number of Rounds:</label>
                <input type="number" id="NumberOfRounds" name="NumberOfRounds" class="form-control" min="1" max="100" required />
            </div>
            <button type="submit" class="btn btn-primary">Simulate Battle</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
